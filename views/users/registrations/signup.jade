              .clear
              .row
                .col-lg-3
                .col-lg-6
                  input(type='text', name='email', placeholder='email', class='form-control')
                .col-lg-3
              .clear
              .clear
              .row
                .col-lg-3
                .col-lg-6 Username
                .col-lg-3
              .clear
              .row
                .col-lg-3
                .col-lg-6
